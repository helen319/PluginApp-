<!DOCTYPE html>
<html>
<head>
  <title>Webapp</title>
  <%= stylesheet_link_tag "style.css" %>
  <%= javascript_include_tag :all %>
  <%= csrf_meta_tag %>
  
  <!-- Input for widget --> 
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
  <script type="text/javascript" src="http://97.107.133.173/colorbox/jquery.colorbox.js"></script>
  <link rel="stylesheet" media="screen" type="text/css" href="http://97.107.133.173/colorbox/colorbox.css"  />
  <script type="text/javascript">
    jQuery(document).ready(function() {	
	  jQuery("#open_colorbox").colorbox({width:"50%", height:"80%", iframe:true});
	});
	
	jQuery(document).ready(function() {
      var temp = $(".choose_brand");
      jQuery(temp).hide();
    });
    
	jQuery(document).ready(function(){
      jQuery(".choose_button").click(function(){
        jQuery(".choose_brand").slideToggle("slow");
      });
    });
  </script>
  
  <style type="text/css">
    #widget {
	  position:fixed;
	  top:250px;
	  right: 0px;
	  }
  </style>
  <!-- End input for widget --> 

  <!-- Input for tab scripts --> 
  <script type="text/javascript" src="/tab_bar/scripts/prototype.lite.js"></script>
  <script type="text/javascript" src="/tab_bar/scripts/moo.fx.js"></script>
  <script type="text/javascript" src="/tab_bar/scripts/moo.fx.pack.js"></script>

  <link rel="stylesheet" media="screen" type="text/css" href="/tab_bar/tab_style.css"  />

  <script type="text/javascript">
  function init(){

    var stretchers = document.getElementsByClassName('box');
    var toggles = document.getElementsByClassName('tab');
    var myAccordion = new fx.Accordion(
      toggles, stretchers, {opacity: false, height: true, duration: 600}
    );

    //hash functions
    var found = false;
    toggles.each(function(h3, i){
      var div = Element.find(h3, 'nextSibling');
        if (window.location.href.indexOf(h3.title) > 0) {
          myAccordion.showThisHideOpen(div);
          found = true;
        }
      });
    if (!found) myAccordion.showThisHideOpen(stretchers[0]);
  }
  </script>

</head>

<body>


<!-- Input for widget (different for each client, will be generated by a helper controller)--> 
<div id="widget"><a id="open_colorbox" href="http://97.107.133.173/brands/show_friends/3">
 <%= image_tag("http://97.107.133.173/images/logo.png") %></a></div>
<!-- End input for widget -->    


<div id="user_nav">

  <div id="logo">
    <%= link_to image_tag("logo2.png"), :root %>
  </div>

  <div id="tabs">
    <ul>
      <li><%= link_to "Home", :root %></li>
      <li><%= link_to "Profile", current_user %></li>
      <li><%= link_to "Message", messages_path %></li>
    </ul>
  </div>

  <% if user_signed_in? %>
    <div id="login_info">
	  <%= current_user.username %> | 
	  <%= link_to "Sign out", destroy_user_session_path %>
    </div>
  <% end %>

</div>


<div id="container">

  <%- flash.each do |name, msg| -%>
    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
  <%- end -%> 
  <% if user_signed_in? %>
    <%= render (:partial => 'layouts/right_container') %>
  <% end %>
  <div id="subcontainer-main">
    <%= yield %>
  </div>

</div>

<div id="footer">
  OrangeLinks Â© 2010 |
  <%= link_to "About", :root %> |
  <%= link_to "Terms", :root %> |
  <%= link_to "Help", :root %>
</div>
</body>
</html>
