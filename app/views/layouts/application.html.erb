<!DOCTYPE html>
<html>
<head>
  <title>Webapp</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>

<body>
<div id="user_nav">
  <div id="logo">
    <%= image_tag("logo_transparent.png") %>
  </div>
  <% if user_signed_in? %>
    <div id="login_info">
      <%= current_user.email %> | 
      <%= link_to "Sign out", destroy_user_session_path %>
    </div>
  <% end %>

</div>
<br>
<%= flash[:notice] %> 
<%= flash[:alert] %> 
<%= yield %>

</body>
</html>
