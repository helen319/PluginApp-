<!DOCTYPE html>
<html>
<!DOCTYPE html>
<head>
  <title>Webapp</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  
  <!-- Input for widget --> 
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
  <script type="text/javascript" src="http://orange-links.heroku.com/colorbox/jquery.colorbox.js"></script>
  <link rel="stylesheet" media="screen" type="text/css" href="http://orange-links.heroku.com/colorbox/colorbox.css"  />
  <script type="text/javascript">
    $(document).ready(function() {	
	  $("#open_colorbox").colorbox({width:"30%", height:"60%", iframe:true});
	});
  </script>
  <style type="text/css">
    #widget {
	  position:fixed;
	  top:250px;
	  right: 0px;
	  }
  </style>
  <!-- End input for widget --> 
  
</head>

<body>


<!-- Input for widget (different for each client, will be generated by a helper controller)--> 
<div id="widget"><a id="open_colorbox" href="http://orange-links.heroku.com/brands/show_friends/3">
 <%= image_tag("logo.png") %></a></div>
<!-- End input for widget -->    


<div id="user_nav">

  <div id="logo">
    <%= link_to image_tag("logo_transparent.png"), :root %>
  </div>

  <div id="tabs">
    <ul>
      <li><a href="#" title="Home">Home</a></li>
      <li><a href="#" title="Message">Message</a></li>
    </ul>
  </div>

  <% if user_signed_in? %>
    <div id="login_info">
	  <%= current_user.email %> | 
	  <%= link_to "Sign out", destroy_user_session_path %>
    </div>
  <% end %>

</div>


<div id="container">

  <%- flash.each do |name, msg| -%>
    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
  <%- end -%> 
  <%= render (:partial => 'layouts/right_container') %>

  <div id="subcontainer-main">
    <%= yield %>
  </div>

</div>

<div id="footer">
  OrangeLinks Â© 2010 |
  <%= link_to "About", :root %> |
  <%= link_to "Terms", :root %> |
  <%= link_to "Help", :root %>
</div>
</body>
</html>
