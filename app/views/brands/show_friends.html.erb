<!DOCTYPE html>

<head>
  <title>Webapp</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
</head>

<body>

<div id="user_nav">
  <div id="logo">
    <%= link_to image_tag("logo2.png"), :root %>
  </div>
</div>

  <%- flash.each do |name, msg| -%>
    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
  <%- end -%> 

  <div id="subcontainer-main" style="margin:50px;">	
    <% if @brand.photo.file? %>
      <span style="position:absolute;"><%= image_tag @brand.photo.url(:original) %></span>  
    <% else %>
      <span style="position:absolute;"><img alt="Profile" src="/system/photos/profile.jpg" /></span>
    <% end %>

	<div id="linkinfo">
	  <span id="name"><%= @brand.name %></span><span id="user">
	  <span id="address"><%= @brand.address %></span>
	  <span id="info"><%= @brand.info %></span>
	</div>
	
        <ul style="padding-top:100px;">
	<h2>Friends</h2>
	
	  <% if @brand.friends.count == 0 %>
		<td>No friends</td>
	  <% else %>
		<% for f in @brand.friends %> 
		  <li><%= f.name %> 
			  (<%= link_to "Visit", {:controller => 'friendships', :action => 'add_count', :brand_id => @brand, :friend_id => f }, :target => '_blank'  %>)
		  </li>   
		<% end %>
	  <% end %>
	</ul>
  </div>

</div>
</body>
</html>




