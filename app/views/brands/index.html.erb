<h1>Listing brands</h1>


<% if user_signed_in? %>
  <br>
  <% if current_user.brand == nil %>
    <td><%= link_to 'New Brand', new_brand_path %></td>
  <% else %>
     <h2>Your Brand:</h2>
    <td><%= current_user.brand.name %></td>
    <td><%= current_user.brand.address %></td> 
    <td><%= link_to 'Show', current_user.brand %></td>
    <td><%= link_to 'Edit', edit_brand_path(current_user.brand) %></td>
    <td><%= link_to 'Destroy', current_user.brand, :confirm => 'Are you sure?', :method => :delete %></td>

  <% end %>
<% end %>
<br>
<br>


<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @brands.each do |b| %>
  <tr>
    <td><%= b.name %></td>
    <td><%= b.address %></td> 
    <td><%= link_to 'Show', b %></td>
  </tr>
<% end %>
</table>

<br />


