<h1>Listing brands</h1>


<% if user_signed_in? %>
  <br>
     <h2>Your Brands: </h2> <h4><%= link_to 'New Brand', new_brand_path %></h4>
     <% current_user.brands.each do |b| %>
       <td><%= b.name %></td>
       <td><%= b.address %></td> 
       <td><%= link_to 'Show', b %></td>
       <td><%= link_to 'Edit', edit_brand_path(b) %></td>
       <td><%= link_to 'Destroy', b, :confirm => 'Are you sure?', :method => :delete %></td><br>
     <% end %>
<% end %>
<br>
