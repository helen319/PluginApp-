<% content_for :title, "Messages" %>

<h2>Messages</h2>

<div id="wrapper" >
	<div id="content">        
      <h3 class="tab" ><div class="tabtxt"><a href="#">Inbox</a></div></h3>
        <div class="tab"><h3 class="tabtxt" ><a href="#">Sent messages</a></h3></div>
      <div class="boxholder">
		<div class="box">
          <table cellpadding="10">
            <tr>
              <th></th>
              <th>Content</th>
              <th>From</th>
              <th></th>
              <th></th>
            </tr>
            <% @recieved_messages.each do |message| %>
              <tr>
                <td>
                  <% if message.status == 'new' %>
                    <span style="color:red;">NEW</span>
                  <% end %>
                </td>
                <td><%= message.content[0,50] %></td>
                <td><%= link_to User.find(message.user_id).username , User.find(message.user_id) %></td>
                <td style="font-size:12px;"><%= link_to 'Show', message %></td>
                <td style="font-size:12px;"><%= link_to 'Destroy', message, :confirm => 'Are you sure?', :method => :delete %></td>
              </tr>
            <% end %>
          </table>
		</div>
		<div class="box">
          <table cellpadding="10">
            <tr>
              <th>Content</th>
              <th>To</th>
              <th></th>
              <th></th>
            </tr>
            <% @sent_messages.each do |message| %>
              <tr>
                <td><%= message.content[0,50] %></td>
                <td><%= link_to User.find(message.recipient_id).username , User.find(message.recipient_id) %></td>
                <td style="font-size:12px;"><%= link_to 'Show', message %></td>
                <td style="font-size:12px;"><%= link_to 'Destroy', message, :confirm => 'Are you sure?', :method => :delete %></td>
              </tr>
            <% end %>
          </table>		</div>
	  </div>
    </div>
</div>
<script type="text/javascript">
	Element.cleanWhitespace('content');
	init();
</script>


